#!/usr/bin/env bash

set -e

function add-pivnet-productfile () {
  stemcell="$1"

  echo "Adding $stemcell to Pivnet metadata"
  case "$stemcell" in
      *"aws"*)
        stemcellname='AWS light'
        ;;

      *"google"*)
        stemcellname='GCP light'
        ;;

      *"azure"*)
        stemcellname='Azure light'
        ;;

      *"vsphere"*)
        stemcellname='vSphere'
        ;;

      *)
       echo "Invalid stemcell: $stemcell, supported IAASes are: aws, azure, google, vsphere"
       exit 1
  esac

  mv $stemcell ../pivnet-metadata

  cat >> ../pivnet-metadata/metadata <<EOF
  - file: pivnet-metadata/$stemcell
    upload_as: "$stemcellname Stemcell for Windows $OS Server"
EOF
}

cat > pivnet-metadata/metadata <<EOF
---
release:
  version: "$(cat stemcell/version)"
  release_type: Beta Release
  eula_slug: "pivotal_beta_eula"
  availability: Admins Only
  user_group_ids: []
  eccn: ""
  license_exception: ""
product_files:
EOF


if [ "$(ls pivnet-release/*.tgz)" != "" ]; then
  mv pivnet-release/*.tgz stemcell
fi

cd stemcell
ls *.tgz
for s in $(ls *.tgz)
  do
    add-pivnet-productfile "$s"
done
cd ..

echo 'Release details:'
cat pivnet-metadata/metadata

echo 'Stemcells:'
ls pivnet-metadata/*.tgz
